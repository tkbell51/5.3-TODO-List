<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TODO LIST</title>
  </head>
  <body>
    <h1>TODO LIST</h1>
    <form class="" action="/" method="post">
      <input type="text" name="todo" placeholder="Add a todo..." value="">
      <input type="submit" name="" value="Add todo">
      </form>
      {{#todos}}
      <form action='/todo' method='post'>
      <ul>
        <li>
          <input type="submit" name='complete' value='Mark Complete'>
          <label for="complete">{{.}}</label>
        </li>
      </ul>
    </form>
    {{/todos}}
    <div class="">
    <h2>completed</h2>
    {{#comp}}
    <li>{{.}}</li>
    {{/comp}}
</div>
  </body>
</html>
